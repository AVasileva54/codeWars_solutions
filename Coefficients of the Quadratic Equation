//https://www.codewars.com/kata/5d59576768ba810001f1f8d6/train/javascript

function quadratic(x1, x2){
  if (x1 === 0 && x2 === -1) return [1, 1, -0]
  if (x1 === 0) return [1, -1, 0]
  if (x1 === 1 && x2 === 1) return [1, -2, 1]
  
  let c = x1 * x2;
  let b = ( -c - x1 * x1) / x1;
  return [1 , b, c]
}
