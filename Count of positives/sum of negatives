//https://www.codewars.com/kata/576bb71bbbcf0951d5000044/train/javascript

function countPositivesSumNegatives(a) {
  console.log(a)
  if(a === null) return [];
  if(a.length === 0) return [];
  let posCount = 0;
  let negCount = 0;
  for(let i = 0; i <= a.length; i++){
    if(a[i] > 0) posCount++;
    if(a[i] < 0) negCount += a[i];
  }
    return [posCount, negCount];
}
