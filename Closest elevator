function elevator(left, right, call){
  if(Math.abs(call-left) < Math.abs(call-right)) {
    return 'left'
  } else { return 'right'
}
}


function elevator(left, right, call){
  return (Math.abs(call-left) < Math.abs(call-right))? 'left': 'right';
}



function elevator(l, r, c){
 let a = Math.abs(l - c),
     b = Math.abs(r - c);
  if (a >= b ) return 'right'
  return 'left';
}
